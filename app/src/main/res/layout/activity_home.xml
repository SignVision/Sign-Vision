<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToUse">

    <Button
        android:id="@+id/SpeechToText"
        android:layout_width="367dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="632dp"
        android:background="@drawable/speech_text_button"
        android:fontFamily="@font/inter_semibold"
        android:stateListAnimator="@null"
        android:text="Speech to Sign Language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Circle"
        android:layout_width="72dp"
        android:layout_height="69.85dp"
        android:layout_marginStart="160dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle"
        app:tint="#FF9FA0" />

    <ImageView
        android:id="@+id/Eye"
        android:layout_width="33.78dp"
        android:layout_height="29.19dp"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="28dp"
        app:layout_anchor="@+id/Circle"
        app:layout_anchorGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closed_eye" />

    <ImageView
        android:id="@+id/Hands"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_marginStart="164dp"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="48dp"
        android:scaleY="1.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hands"
        app:tint="#8391D8" />

    <TextView
        android:id="@+id/Sign_Vision"
        android:layout_width="244dp"
        android:layout_height="32dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Sign Vision"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Start_Chatting"
        android:layout_width="195dp"
        android:layout_height="38dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:layout_marginTop="188dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Start chatting!"
        android:textColor="#7B82B2"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Translating sign language and speech to better understand one another"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/People"
        android:layout_width="309dp"
        android:layout_height="206dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="324dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/people_talking" />

    <Button
        android:id="@+id/SignLanguageText"
        android:layout_width="367dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="564dp"
        android:background="@drawable/sign_text_button"
        android:fontFamily="@font/inter_semibold"
        android:stateListAnimator="@null"
        android:text="Sign Language to Text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onSignToTextClicked"/>

    <Button
        android:id="@+id/SpeechToSign"
        android:layout_width="367dp"
        android:layout_height="57dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="632dp"
        android:background="@drawable/speech_text_button"
        android:fontFamily="@font/inter_semibold"
        android:stateListAnimator="@null"
        android:text="Speech to Sign Language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onSpeechToSignClicked"/>

    <Button
        android:id="@+id/TextToSign"
        android:layout_width="367dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/upload_video_button"
        android:fontFamily="@font/inter_semibold"
        android:stateListAnimator="@null"
        android:text="Text to Sign Language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onTextToSignClicked"/>

</androidx.constraintlayout.widget.ConstraintLayout>

