<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HowToUse">


    <ImageView
        android:id="@+id/People"
        android:layout_width="309dp"
        android:layout_height="206dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="280dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/people_talking" />

    <ImageView
        android:id="@+id/Eye"
        android:layout_width="33.78dp"
        android:layout_height="29.19dp"
        android:layout_marginStart="156dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="24dp"
        app:layout_anchor="@+id/Circle"
        app:layout_anchorGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closed_eye" />

    <ImageView
        android:id="@+id/Hands"
        android:layout_width="65dp"
        android:layout_height="58dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="44dp"
        android:scaleY="1.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hands"
        app:tint="#8391D8" />

    <TextView
        android:id="@+id/Sign_Vision"
        android:layout_width="244dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Sign Vision"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Start_Chatting"
        android:layout_width="195dp"
        android:layout_height="38dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="164dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Start chatting!"
        android:textColor="#7B82B2"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="331dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Translating sign language and speech to better understand one another"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SpeechToSign"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="568dp"
        android:background="@drawable/speech_text_button"
        android:fontFamily="@font/inter_semibold"
        android:onClick="onSpeechToSignClicked"
        android:stateListAnimator="@null"
        android:text="Speech to Sign Language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/TextToSign"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="624dp"
        android:background="@drawable/upload_video_button"
        android:fontFamily="@font/inter_semibold"
        android:onClick="onTextToSignClicked"
        android:stateListAnimator="@null"
        android:text="Text to Sign Language"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SignLanguageText"
        android:layout_width="347dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="508dp"
        android:background="@drawable/sign_text_button"
        android:fontFamily="@font/inter_semibold"
        android:onClick="onSignToTextClicked"
        android:stateListAnimator="@null"
        android:text="Sign Language to Text"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Circle"
        android:layout_width="72dp"
        android:layout_height="69.85dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/circle"
        app:tint="#FF9FA0" />

</androidx.constraintlayout.widget.ConstraintLayout>

